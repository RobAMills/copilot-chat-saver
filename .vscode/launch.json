{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "name": "Debug Copilot Extension",
      "request": "launch",
      "url": "https://copilot.microsoft.com/",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": [
        "--disable-extensions-except=${workspaceFolder}",
        "--load-extension=${workspaceFolder}"
      ]
    }
  ]
}
